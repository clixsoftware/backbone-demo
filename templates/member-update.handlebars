<!-- UPDATE VIEW -->
<p class="avatar">
	<img src="img/members/{{member.username}}.jpg" />
</p>
<form class="form-vertical">
	<fieldset>
		<legend>Edit Member</legend>
		<div class="control-group">
			<label class="control-label" for="name">Name:</label>
			<div class="controls">
				<input type="text" name="name" value="{{member.name}}" class="span3" />
				<p class="help-block"></p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="city">City:</label>
			<div class="controls">
				<input type="text" name="city" value="{{member.city}}" class="span3" />
				<p class="help-block"></p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="state">State:</label>
			<div class="controls">
				<input type="text" name="state" value="{{member.state}}" />
				<p class="help-block"></p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="country">Country:</label>
			<div class="controls">
				<input type="text" name="country" value="{{member.country}}" class="span3" />
				<p class="help-block"></p>
			</div>
		</div>
		<div class="form-actions">
			<button class="btn btn-primary save" type="submit">Save</button>
			<input type="hidden" name="_method" value="put" />
		</div>
	</fieldset>
</form>